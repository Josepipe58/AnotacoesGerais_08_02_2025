<Window x:Class="AppAnotacoesGerais.Views.AnotacoesGeraisViews.AlterarAnotacaoGeralView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:vman="clr-namespace:AppAnotacoesGerais.ViewModels.AnotacoesGeraisVM" 
        mc:Ignorable="d"  xml:lang="pt-BR" Title="Alterar Anotações Gerais " Height="900" 
        Width="1600" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vman:AnotacaoGeralViewModel/>
    </Window.DataContext>

    <Grid>
        <!--| Título |-->
        <Label Content="GERENCIAR ANOTAÇÕES GERAIS" Style="{DynamicResource LabelAzulMarino}" FontSize="24" Height="50"  Padding="200,8,10,10" 
               Margin="882,5,10,0" HorizontalAlignment="Stretch"/>

        <!--| Imagem |-->
        <Image HorizontalAlignment="Left" Width="885" Source="/Imagens/Cachoeira08.jpg" Stretch="Fill"  Margin="10,5,0,5"/>

        <!--|Borda Lateral Direita -->
        <Border x:Name="Borda03" BorderBrush="Navy" CornerRadius="25,25,25,25" BorderThickness="2,4,3,9" Margin="900,55,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#FF3A0CE2" Offset="0.0" />
                    <GradientStop Color="#FF14F3DA" Offset="0.5" />
                    <GradientStop Color="#FF0B18E6" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>

            <!--|TextBox Lateral Direita -->
            <TextBox x:Name="TxtDescricao" FontSize="20" FontWeight="Bold" Foreground="#FF0F0FB0" Margin="10,10,10,10" 
                     Text="{Binding AnotacaoGeralModel.Descricao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" AcceptsTab="True" AcceptsReturn="True"/>
        </Border>

        <!--| Calendário |-->
        <DatePicker x:Name="DtpData" Style="{DynamicResource CalendarioDatePicker}" Height="45" Width="200" Margin="30,178,0,0"
                    Text="{Binding AnotacaoGeralModel.Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedDateFormat="Short"/>

        <!--| Rótulos[Label] -->
        <Label Content="Código" Style="{DynamicResource LabelAzulMarino}" Height="40" Width="85" Margin="30,40,0,0"/>

        <Label Content="Data" Style="{DynamicResource LabelAzulMarino}" Height="40" Width="86" Margin="30,145,0,0"/>

        <Label Content="Quantidade de Registros =" Style="{DynamicResource LabelVerdeClaro}" Height="40" Width="236"  Margin="289,402,0,0"/>

        <Label Content="Consultar" Style="{DynamicResource LabelVerdeClaro}" Height="40" Width="104"  Margin="656,50,0,0"/>

        <Label Content="Categoria" Style="{DynamicResource LabelAzulMarino}" FontSize="18" Height="45" Margin="287,45,0,0" Width="286"/>

        <Label Content="SubCategoria" Style="{DynamicResource LabelAzulMarino}" FontSize="18" Height="45" Width="284" Margin="289,160,0,0"/>

        <Label Content="Nome da Descrição" Style="{DynamicResource LabelAzulMarino}" FontSize="18" Height="45" Width="283" Margin="290,280,0,0"/>

        <!--| TextBoxes |-->
        <TextBox x:Name="TxtId" Style="{DynamicResource TextBoxAzulMarinho}" Margin="30,80,0,0" Height="40" Width="90" 
                 Text="{Binding AnotacaoGeralModel.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="16" FontWeight="Bold" IsReadOnly="True"/>

        <TextBox x:Name="TxtConsultar" Style="{DynamicResource TxtAzulClaroEBordaAzul}" Margin="755,50,0,0" Height="40" Width="90"  FontSize="16" FontWeight="Bold"
                 Text="{Binding AnotacaoGeralModel.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!--|TextBlock |-->
        <TextBlock Name="TxtQtdeRegistros" FontSize="14" FontWeight="Bold" Foreground="#FF1705EC" Background="#FF1AF3D6"  Height="40" Width="60"
                   Margin="503,402,0,0"  Padding="2,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!--| Botões -->
        <Button x:Name="BtnConsultar" Content="Consultar" Style="{DynamicResource BtnAzulEscuroEAzulClaro}" Height="60" Width="190" Margin="656,105,0,0"
                Command="{Binding ComandoDeDeConsultarAnotacaoGeral}" Click="BtnConsultar_Click"/>
        <!--Click="BtnConsultar_Click"-->


        <Button x:Name="BtnCadastrar" Content="Cadastrar" Style="{DynamicResource BtnAzulEscuroEAzulClaro}" Width="190" Height="60"  Margin="656,180,0,0"
                Command="{Binding ComandoDeCadastrarAnotacaoGeral}"/>

        <Button x:Name="BtnAlterar" Content="Alterar" Style="{DynamicResource BtnAzulEscuroEAzulClaro}" Height="60" Width="190" Margin="656,255,0,0"
                Command="{Binding ComandoDeDeAlterarAnotacaoGeral}"/>

        <Button x:Name="BtnExcluir" Content="Excluir" Style="{DynamicResource BtnAzulEscuroEAzulClaro}" Height="60" Width="190" Margin="656,330,0,0"
                Command="{Binding ComandoDeDeExcluirAnotacaoGeral}"/>

        <Button x:Name="BtnAtualizar" Content="Atualizar" Style="{DynamicResource BtnAzulEscuroEAzulClaro}" Height="60" Width="190" Margin="656,405,0,0"
                Command="{Binding ComandoDeDeAtualizarAnotacaoGeral}"/>

        <!--| Comboboxes -->
        <ComboBox x:Name="CbxCategoria" Style="{DynamicResource ComboBoxAzulMarinho}" Height="45" Width="315" SelectedIndex="-1" Margin="285,90,0,0"
                  Text="{Binding AnotacaoGeralModel.NomeDaCategoria, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="NomeDaCategoria"
                  SelectionChanged="CbxCategoria_SelectionChanged"/>

        <ComboBox x:Name="CbxSubCategoria" Style="{DynamicResource ComboBoxAzulMarinho}" Height="45" Width="315" SelectedIndex="-1" Margin="287,205,0,0"
                  Text="{Binding AnotacaoGeralModel.NomeDaSubCategoria, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="NomeDaCategoria"
                  SelectionChanged="CbxSubCategoria_SelectionChanged"/>

        <ComboBox x:Name="CbxNomeDaDescricao" Style="{DynamicResource ComboBoxAzulMarinho}" Height="45" Width="315" SelectedIndex="-1" Margin="289,325,0,0"
                  Text="{Binding AnotacaoGeralModel.NomeDaDescricao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Button x:Name="BtnSair" Content="Sair" Style="{DynamicResource BtnAzulEscuroEAzulClaro}" Height="60" Width="190" Margin="656,480,0,0"
                Click="BtnSair_Click"/>
    </Grid>
</Window>
