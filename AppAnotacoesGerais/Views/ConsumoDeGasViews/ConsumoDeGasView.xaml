<UserControl x:Class="AppAnotacoesGerais.Views.ConsumoDeGasViews.ConsumoDeGasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" xml:lang="pt-BR" d:DesignHeight="900" d:DesignWidth="1200">

    <Grid Background="#FF062E0D">

        <!--| Rótulos(Label) |-->
        <Label Content="CONSUMO DE GÁS" Style="{DynamicResource LabelTransparente}" Width="165" Height="30" Margin="375,10,0,0"/>

        <Label Content="Digite um código para carregar a data anterior:" Style="{DynamicResource LabelTransparente}" Width="364" Height="30" Margin="10,45,0,0" FontSize="16"/>

        <Label Content="O consumo de gás foi de " Style="{DynamicResource LabelTransparente}" FontSize="16" Width="150" Height="20" Margin="460,45,0,0"/>

        <Label Content="dias. " Style="{DynamicResource LabelTransparente}" FontSize="16" Width="49" Height="20" Margin="637,45,0,0"/>

        <Label Content="Codigo" Style="{DynamicResource LabelTransparente}" FontSize="12" Width="56" Height="20" Margin="0,85,0,0"/>

        <Label Content="Data Anterior" Style="{DynamicResource LabelTransparente}" FontSize="12" Width="100" Height="20" Margin="80,85,0,0" />

        <Label Content="Data da Troca" Style="{DynamicResource LabelTransparente}" FontSize="12" Width="104" Height="20" Margin="218,85,0,0"/>

        <Label Content="Dias de Consumo" Style="{DynamicResource LabelTransparente}" FontSize="12" Width="110" Height="20" Margin="330,85,0,0"/>

        <Label Content="Data da Compra" Style="{DynamicResource LabelTransparente}" FontSize="12" Width="110" Height="20" Margin="440,85,0,0"/>

        <Label Content="Preço"  Style="{DynamicResource LabelTransparente}" FontSize="12" Width="58" Height="20" Margin="550,85,0,0"/>

        <Label Content="Nome da Empresa" Style="{DynamicResource LabelTransparente}" FontSize="12" Width="115" Height="20" Margin="660,85,0,0"/>

        <!--| TeextBox |-->
        <TextBox x:Name ="TxtCodigoDataAnterior" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="70" Margin="380,40,0,0" 
                 KeyDown="TxtCodigoDataAnterior_KeyDown"/>

        <TextBox x:Name ="TxtCodigo" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="65" Margin="5,105,0,0"/>

        <TextBox Name ="TxtDiaTroca" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="105" Margin="225,105,0,0"/>

        <TextBox x:Name ="TxtConsumoEmDias" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="105" Margin="335,105,0,0" Text="Consumo"/>

        <TextBox x:Name ="TxtDiaCompra" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="105" Margin="445,105,0,0"/>

        <TextBox x:Name ="TxtPreco" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="105" Margin="555,105,0,0" KeyDown="TxtPreco_KeyDown"/>

        <TextBox x:Name ="TxtFornecedor" Style="{DynamicResource TxtBrancoEBordaAzul}" Width="120" Margin="665,105,0,0"/>

        <!--| TeextBlock |-->
        <TextBlock x:Name="TbxDiasConsumo" Style="{DynamicResource TextBlockTranparente}" Margin="605,40,0,0" Text="000"/>

        <!--| Botões |-->
        <Button x:Name="BtnCadastrarSalvar" Content="Cadastrar" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16" Height="50" Width="150" 
                Margin="885,100,0,0" Click="BtnCadastrarSalvar_Click"  />

        <Button x:Name="BtnSelecionarAlterar" Content="Selecionar Para Alterar ou Excluir" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16"
                Height="50" Width="290" Margin="38,165,0,0" Click="BtnSelecionarAlterar_Click"  />

        <Button x:Name="BtnAlterarSalvar" Content="Alterar" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16" Height="50" Width="150" 
                Margin="362,165,0,0" Click="BtnAlterarSalvar_Click"/>

        <Button x:Name="BtnLimparDados" Content="Atualizar" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16" Height="50" Width="150"
                Margin="535,165,0,0" Click="BtnLimparDados_Click"/>

        <Button x:Name="BtnExcluir" Content="Excluir" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16" Height="50" Width="150"
                Margin="709,165,0,0" Click="BtnExcluir_Click"/>

        <Button x:Name="BtnMenuInicial" Content="Menu Inicial" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16" Height="50" Width="150"
                Margin="885,165,0,0" Click="BtnMenuInicial_Click"/>

        <Button x:Name="BtnFechar" Content="Fechar" Style="{DynamicResource BtnRetangularVerdeEscuro}" FontSize="16" Height="50" Width="110"
                Margin="1055,165,0,0" Click="BtnFechar_Click"/>

        <!--| Combobox |-->
        <ComboBox Name="CbxDataAnterior" Style="{DynamicResource ComboBoxAzulMarinho}" Width="140" Margin="75,105,0,0" ItemStringFormat="dd/MM/yyyy"/>

        <!--| DataGrid de Dados |-->
        <DataGrid x:Name="DtgDados" Style="{DynamicResource DtgDadosCorDaLinhaBisqueWhite}" Margin="0,229,0,0"  SelectedIndex="-1" 
                  MouseDoubleClick="DtgDados_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo, StringFormat=\{0:D4\}}" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="100"/>
                <DataGridTextColumn Header="Dia da Troca" Binding="{Binding DiaDaTroca, StringFormat=dd/MM/yyyy}" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="150"/>
                <DataGridTextColumn Header="Dias de Consumo" Binding="{Binding DiasDeConsumo}" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="150"/>
                <DataGridTextColumn Header="Dia da Compra" Binding="{Binding DiaDaCompra, StringFormat=dd/MM/yyyy}" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="150"/>
                <DataGridTextColumn Header="Preço do Gás" Binding="{Binding Preco, StringFormat=R$ \{0:N\}}" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="150"/>
                <DataGridTextColumn Header="Empresa de Gás" Binding="{Binding Fornecedor}" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="250"/>
                <DataGridTextColumn Header="" HeaderStyle="{DynamicResource DtgCabecalhoVerdeEscuro}" Width="600"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
