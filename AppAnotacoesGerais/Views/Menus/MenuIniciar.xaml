<Window x:Class="AppAnotacoesGerais.Views.Menus.MenuIniciar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:comando="clr-namespace:AppAnotacoesGerais.Comandos"
        mc:Ignorable="d" xml:lang="pt-BR" Height="1000" Width="1400" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized" 
        WindowStyle="SingleBorderWindow">

    <!--Comandos da Tela Principal-->
    <Window.DataContext>
        <comando:ComandosDaTelaPrincipal/>
    </Window.DataContext>

    <Grid>
        <Border Background="#FF1EE3F1" BorderBrush="#FFFFFF" BorderThickness="0,5,0,5" CornerRadius="25" HorizontalAlignment="Stretch" Height="NaN" 
                VerticalAlignment="Stretch" Width="NaN"/>
        <Grid Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--| Grid Lateral |-->
            <Grid Width="370" Grid.Column="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="470"/>
                    <RowDefinition Height="480*"/>
                </Grid.RowDefinitions>
                
                <!--| Menu Lateral Superior |-->
                <Label Content="CONSULTAR DADOS" FontSize="20" FontWeight="Bold" Height="50" Padding="80 10 0 0" VerticalAlignment="Top" 
                       Background="#FF021507" Foreground="#FF11E4E4"/>
                <ItemsControl ItemsSource="{Binding SourceConsultarDados}" Background="#FF021507" Margin="0,50,0,5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="280" Margin="0,15,20,0" Height="80">
                                <Button Content="{Binding ConsultarDados}" FontSize="14" Width="280" Style="{StaticResource BtnRetangularVerdeEscuro}"
                                        CommandParameter="{Binding ConsultarDados}" Command="{Binding DataContext.ComandoDoMenuConsultarDados, RelativeSource={RelativeSource 
                                    AncestorType={x:Type ItemsControl}, Mode=FindAncestor}}" Margin="0,20,0,0" Height="60"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--| Menu Lateral Inferior |-->
                <Label Content="GERENCIAR DADOS" FontSize="20" FontWeight="Bold" Padding="80 10 0 0" 
                       Background="#FF021507" Foreground="#FF11E4E4" Margin="0,0,0,449" Grid.Row="1"/>
                <Grid Width="370" Grid.Row="1" Margin="0,20,0,15">
                    <ItemsControl ItemsSource="{Binding SourceGerenciarDados}" Background="#FF021507" Margin="0,30,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Width="280" Margin="0 5 20 0" Height="80">
                                    <Button Content="{Binding GerenciarDados}" FontSize="14" Width="280" Style="{StaticResource BtnRetangularVerdeEscuro}"
                                            CommandParameter="{Binding GerenciarDados}" Command="{Binding DataContext.ComandoDoMenuGerenciarDados, 
                                            RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}, Mode=FindAncestor}}" Margin="0,20,0,0" Height="60"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--| Botões |-->
                    <Button x:Name="BtnSqlServer" Content="Abrir Sql Server" FontWeight="Bold" FontSize="16" Style="{DynamicResource BtnRetangularVerdeEscuro}" 
                            Command="{Binding ComandoAbrirBancoDeDados}" Height="60" Width="280" Margin="35,310,55,0" HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="BtnSair" Content="Sair do Aplicativo" FontWeight="Bold" FontSize="16" Style="{DynamicResource BtnRetangularVerdeEscuro}" 
                            Command="{Binding ComandoSairDoAplicativo}"
                            Height="60" Width="280" Margin="35,390,55,0" HorizontalAlignment="Stretch"/>
                </Grid>                
            </Grid>
            <!--| Página Principal |-->
            <Grid Margin="5,5,0,0" Grid.Row="2" Grid.Column="2" Grid.RowSpan="3" Height="980">
                <Border Background="#FF021507" BorderBrush="#FFFFFF" BorderThickness="0,5,0,5" Margin="0,5,10,11"
                    CornerRadius="25 25 25 25">
                    <ContentControl x:Name="Pages" Content="{Binding SelecionarControleDeUsuario}" Margin="10,10,10,10"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
