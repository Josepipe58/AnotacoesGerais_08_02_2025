<Window x:Class="AppAnotacoesGerais.Telas.InformacoesPessoais.AlterarInformacaoPessoal_UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        xml:lang="pt-BR" Height="950" Width="1050" Margin="0,5,0,0" Title="Alterar Informações Pessoais ">

    <Grid>
        <Border CornerRadius="25,25,25,25" Background="#FF22C5B2" BorderThickness="2,4,3,9">

            <Grid Background="#FF021507" Width="1050">

                <!--| Título |-->
                <Label Content="ALTERAR INFORMAÇÃO PESSOAL" Style="{DynamicResource LabelTransparente}" FontSize="28" Height="50" Margin="180,0,0,0" Width="510"/>

                <!--| Imagem |-->

                <Border  CornerRadius="25,25,25,25" Background="#FF22C5B2" BorderThickness="2,4,3,9" Width="745" Margin="30,100,0,0" HorizontalAlignment="Left" 
                         Height="120" VerticalAlignment="Top">

                    <TextBox x:Name="TxtTitulo" FontSize="20" FontWeight="Bold" Foreground="#FF0F0FB0" TextWrapping="Wrap" AcceptsTab="True" 
                             AcceptsReturn="True" Margin="10,10,10,10"/>
                </Border>

                <!--|Borda Inferior -->
                <Border x:Name="Borda03" Background="#FF22C5B2" CornerRadius="25,25,25,25" BorderThickness="2,4,3,9" Margin="30,270,0,0" HorizontalAlignment="Left" 
                        Width="745" Height="610" VerticalAlignment="Top">

                    <TextBox x:Name="TxtDescricao" FontSize="20" FontWeight="Bold" Foreground="#FF0F0FB0" Margin="10,10,10,10" TextWrapping="Wrap" 
                             AcceptsTab="True" AcceptsReturn="True"/>
                </Border>

                <!--| Calendário |-->

                <!--| Rótulos[Label] -->
                <Label Content="Código" Style="{DynamicResource LabelTransparente}" Height="40" Width="84" Margin="870,40,0,0"/>

                <Label Content="Título" Style="{DynamicResource LabelTransparente}" Height="40" Width="100" Margin="20,65,0,0" Padding="10,10,0,0"/>

                <Label Content="Descrição" Style="{DynamicResource LabelTransparente}" FontSize="20" Height="40" Width="120" Margin="20,225,0,0" Padding="10,10,0,0"/>

                <!--| TextBoxes |-->
                <TextBox x:Name="TxtId" Style="{DynamicResource TxtBrancoEBordaAzul}" Margin="870,65,0,0" Height="40" Width="90" FontSize="16" FontWeight="Bold" 
                 IsReadOnly="True"/>

                <!--|TextBlock |-->

                <!--| Botões -->

                <Button x:Name="BtnAlterar" Content="Alterar" Style="{DynamicResource BtnRetangularVerdeEscuro}" Width="190" Margin="820,130,0,0"
                Click="BtnAlterar_Click"/>

                <Button x:Name="BtnSair" Content="Sair" Style="{DynamicResource BtnRetangularVerdeEscuro}" Width="190" Margin="820,220,0,0"
                        Click="BtnSair_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
